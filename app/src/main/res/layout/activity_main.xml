<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textStatusD0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:text="Status: .."
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleD0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/toggleD0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="fetch"
        android:text="Update status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleD0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="72dp"
        android:hapticFeedbackEnabled="false"
        android:onClick="onToggleD0"
        android:text="ToggleButton"
        android:textOff="Turn On"
        android:textOn="Turn Off"
        app:layout_constraintStart_toStartOf="@+id/pinD0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameD0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="setNameD0"
        android:text="Change name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleD0"
        app:layout_constraintStart_toEndOf="@+id/pinD0" />

    <TextView
        android:id="@+id/pinD0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Pin D0:"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleD0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>